<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/cream_white"
    app:cardCornerRadius="20dp"
    app:cardElevation="16dp"
    android:id="@+id/each_card_view"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/individual_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListUserFragment"
        >

        <TextView
            android:id="@+id/Greeting_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Greetings...."
            android:textStyle="italic"
            android:textSize="30sp"
            android:textColor="@color/teal_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.201"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.358" />

        <TextView
            android:id="@+id/the_user_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="108dp"
            android:hint="New User"
            android:textSize="30sp"
            android:textColor="@color/teal_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.618"
            app:layout_constraintStart_toEndOf="@+id/Greeting_txt_view"
            app:layout_constraintTop_toBottomOf="@+id/Greeting_txt_view"
            app:layout_constraintVertical_bias="0.025" />
